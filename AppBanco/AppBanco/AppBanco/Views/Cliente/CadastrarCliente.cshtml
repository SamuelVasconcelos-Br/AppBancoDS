@model AppCrud1.Models.Cliente

@{
    ViewData["Title"] = "CadastrarCliente";
}

<h1>Cadastrar Cliente</h1>

<h4>Cliente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CadastrarCliente">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="nomeCli" class="control-label"></label>
                <input asp-for="nomeCli" class="form-control" />
                <span asp-validation-for="nomeCli" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="emailCli" class="control-label"></label>
                <input asp-for="emailCli" class="form-control" />
                <span asp-validation-for="emailCli" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="teleCli" class="control-label"></label>
                <input asp-for="teleCli" class="form-control" />
                <span asp-validation-for="teleCli" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="endCli" class="control-label"></label>
                <input asp-for="endCli" class="form-control" />
                <span asp-validation-for="endCli" class="text-danger"></span>
            </div>
            <br />
            <br />
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary"/>
                <a class="btn btn-secondary" asp-action="Index">Voltar para a Lista</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
